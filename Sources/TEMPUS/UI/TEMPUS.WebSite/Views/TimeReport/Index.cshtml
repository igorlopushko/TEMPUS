@{
    ViewBag.Title = "Time Records";
}

@section PageButtons {
    <div class="row">
        <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12 pull-right">
            <a href="#timeSheetModal" data-toggle="modal" class="btn btn-primary form-control">
                <span class="fa fa-plus"></span>&nbsp;Create Time Record
            </a>
        </div>
    </div>
}

<div class="row">
    <div class="form-horizontal">
        <div class="col-md-4">
            <div class="form-group">
                <label for="user" class="col-md-4 control-label">Person</label>
                <div class="col-md-8">
                    <select class="form-control" id="user">
                        <option>Person</option>
                        <option>Aleksander Zayats</option>
                        <option>Dmitriy Volkov</option>
                        <option>John Doe</option>
                        <option>Yaroslav Admin</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="project" class="col-md-4 control-label">Project</label>
                <div class="col-md-8">
                    <select class="form-control" id="project">
                        <option>Project</option>
                        <option>TEMPUS</option>
                        <option>Happy Project</option>
                        <option>Lucky Project</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="status" class="col-md-4 control-label">Status</label>
                <div class="col-md-8">
                    <select class="form-control" id="status">
                        <option>Status</option>
                        <option>New</option>
                        <option>In Progress</option>
                        <option>Done</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="start_date" class="col-md-4 control-label">Start Date</label>
                <div class="col-md-8">
                    <div class='input-group date' id='start_date' role="datepicker">
                        <input type='text' class="form-control" placeholder="Start Date" />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="end_date" class="col-md-4 control-label">End Date</label>
                <div class="col-md-8">
                    <div class='input-group date' id='end_date' role="datepicker">
                        <input type='text' class="form-control" placeholder="End Date" />
                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="responsiveGrid table table-striped table-hover">
            <thead>
                <tr>
                    <th>Project</th>
                    <th>Task</th>
                    <th>Person</th>
                    <th>Effort (hours)</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr>
                        <td data-title="Project">@record.Project.Name</td>
                        <td data-title="Task">@if (record.Task != null)
                            { @record.Task.Name }</td>
                        <td data-title="Person">@record.User.FirstName @record.User.LastName</td>
                        <td data-title="Effort (hours)">@record.Hours</td>
                        <td data-title="From">@record.StartDate.ToString("MM/dd/yyyy")</td>
                        <td data-title="To">@record.EndDate.ToString("MM/dd/yyyy")</td>
                        <td data-title="Description">@record.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="timeSheetModal" tabindex="-1" role="dialog" aria-labelledby="timeSheetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="timeSheetModalLabel">Create Time Record</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="start_date_" class="col-sm-3 control-label">Start Date</label>
                        <div class="col-sm-9">
                            <div class="input-group" role="datepicker">
                                <input id="start_date_" type="text" class="form-control" placeholder="Date">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="end_date_" class="col-sm-3 control-label">Start Date</label>
                        <div class="col-sm-9">
                            <div class="input-group" role="datepicker">
                                <input id="end_date_" type="text" class="form-control" placeholder="Date">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="project_" class="col-sm-3 control-label">Project</label>
                        <div class="col-sm-9">
                            <select class="form-control" id="project_">
                                <option>Project</option>
                                <option>TEMPUS</option>
                                <option>Happy Project</option>
                                <option>Lucky Project</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Hours</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" placeholder="Hours">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Comment</label>
                        <div class="col-sm-9">
                            <textarea class="form-control"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>
