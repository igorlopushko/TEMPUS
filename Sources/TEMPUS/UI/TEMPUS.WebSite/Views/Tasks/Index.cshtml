@{
    ViewBag.Title = "Tasks";
}

@section PageButtons {
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 pull-right">
            <a href="#" class="btn btn-primary form-control">Create Task</a>
        </div>
    </div>
}

<div class="row">
