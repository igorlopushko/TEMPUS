@using TEMPUS.WebSite.Models.Project

@{
    ViewBag.Title = "Select Project";
}

<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <form role="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<p />
<div class="row">
    @foreach (var project in Model)
    {
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 projectWrapper">
            <a class="projectBlock">
                <div class="projectName">@project.Name</div>
                <div>
                    @if (project.Status == ProjectStatus.Green)
                    { <div class="status greenStatus"></div> }
                    @if (project.Status == ProjectStatus.Yellow)
                    { <div class="status yellowStatus"></div> }
                    @if (project.Status == ProjectStatus.Red)
                    { <div class="status redStatus"></div> }
                </div>
            </a>
        </div>
    }
</div>
