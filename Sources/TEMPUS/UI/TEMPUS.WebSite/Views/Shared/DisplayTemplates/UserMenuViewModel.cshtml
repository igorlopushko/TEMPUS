@using TEMPUS.WebSite.Models.Account

@model UserMenuViewModel


<div id="user-block" class="col-lg-2 col-md-3 col-sm-12">
    @if (Model.IsAuthenticated)
    {
        <ul class="nav navbar-nav">
            <li></li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"></span> @String.Format("{0} {1}", Model.FirstName, Model.LastName)
                    <b class="caret"></b>
                </a>
                <ul id="user-block-dropdown" class="dropdown-menu text-center">
                    <li>
                        <img src="@Url.Content("~/Content/images/user.png")" class="img-thumbnail img-responsive">
                    </li>
                    <li class="divider"></li>
                    <li>
                        <span id="profile-btn">
                            @using (Html.BeginForm("Profile", "Account"))
                            {
                                <button type="submit" class="btn btn-primary">
                                    <span class="glyphicon glyphicon-user"></span>Profile
                                </button>
                            }
                        </span>
                        <span id="logout-btn">
                            @using (Html.BeginForm("LogOut", "Account"))
                            {
                                <button type="submit" class="btn btn-danger">
                                    <span class="glyphicon glyphicon-user"></span>LogOut
                                </button>
                            }
                        </span>
                    </li>
                </ul>
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav">
            <li>
                @Html.ActionLink("Log In", "LogIn", "Account")
            </li>
        </ul>
    }
</div>