@using TEMPUS.WebSite.Contexts
@using TEMPUS.WebSite.Models.Account

@model UserMenuViewModel


@if (Model.IsAuthenticated)
{
    <ul id="user-block" class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="fa fa-user"></span>@String.Format(" {0} {1}", Model.FirstName, Model.LastName)
                <b class="caret"></b>
            </a>
            <ul id="user-block-dropdown" class="dropdown-menu text-center">
                <li>
                    <img src="@Url.Content("~/Content/images/user.png")" class="img-thumbnail img-responsive">
                </li>
                <li class="divider"></li>
                <li>
                    <span id="profile-btn">
                        <a href="@Url.Action("Profile", "Account", new { id = UserContext.Current.UserId.Id })" class=" btn btn-primary">
                            <span class="fa fa-user"></span> Profile
                        </a>
                    </span>
                    <span id="logout-btn">
                        @using (Html.BeginForm("LogOut", "Account"))
                        {
                            <button type="submit" class="btn btn-danger">
                                <span class="fa fa-sign-out"></span>LogOut
                            </button>
                        }
                    </span>
                </li>
                <li class="divider"></li>
            </ul>
        </li>
    </ul>
}